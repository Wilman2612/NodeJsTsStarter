{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended" 
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
        "import/resolver": {
          "typescript":{}
        }
      },
    "rules": {
        "import/prefer-default-export": "off",
        "import/extensions": [
           "error",
           "ignorePackages",
           {
             "js": "never",
             "jsx": "never",
             "ts": "never",
             "tsx": "never"
           }
        ],
      "no-shadow": "off",
      "@typescript-eslint/no-shadow": ["error"],
      "no-underscore-dangle":  ["error", { "allow": ["_id"] }]
     }
}
